<!DOCTYPE html>
<html>

<head>
    <link href="./css/styleLogin.css" rel="stylesheet" />
    <script src="./js/button.js"></script>
</head>

<body>
    <form class="form" method="POST" action="/login">
        <div id="image-txt-container">
            <div class="title">Welcome</div>
            <div class="subtitle">Login and continue</div>
            <img src="./images/logo.jpeg" alt="Logo" />
        </div>

        <div class="input-container ic2">
            <input id="email" name="email" class="input" type="text" placeholder=" " />
            <div class="cut cut-short"></div>
            <label for="email" class="placeholder">Email</label>
        </div>
        <div class="input-container ic1">
            <input id="password" name="password" class="input" type="password" placeholder=" " />
            <div class="cut"></div>
            <label for="password" class="placeholder">Password</label>
        </div>
        <div class="button-container">
            <button type="text" class="submit">Log In</button>

        </div>
        <% if (locals.error) { %>
            <div class="alert alert-danger">
                <%= locals.error %>
            </div>
            <% } %>
                <a class="link" href="/register">Create New Account</a>
                <br />
                <a href="/" class="link">Cancel</button>
    </form>
  </body>
</html>